<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikha.projetointegrador5android.LoginActivity">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/textEditPasswordLogin"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/textEditEmailLogin"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textEditPasswordLogin"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/botaoConfirmarLogin"
        app:layout_constraintVertical_bias="0.241" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/botaoConfirmarLogin"
        app:bootstrapText="Confirmar"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="322dp" />

</android.support.constraint.ConstraintLayout>
